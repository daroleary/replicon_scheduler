<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.name.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.name %>:</strong></dt>
  <dd><%= @employee.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              employees_path, :class => 'btn btn-default'  %>
<div id='calendar' data-events="<%= @events.fetch_employee_events(@employee.id).to_json %>" data-start-date="<%= @events.start_date %>"></div>

<%= content_for :body_scripts do %>
    <script type="text/javascript" charset="utf-8">
        RepliconScheduler.currentView = new RepliconScheduler.Views.EmployeePage
    </script>
<% end %>